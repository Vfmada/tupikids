<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffaa0"
    tools:context=".PrimeiraFase">

    <ToggleButton
        android:id="@+id/img1"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/imgteste_seletor"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toTopOf="@+id/img3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo2"
        tools:srcCompat="@tools:sample/avatars" />

    <ToggleButton
        android:id="@+id/img2"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="75dp"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/imgteste_seletor"
        app:layout_constraintBottom_toTopOf="@+id/botaoContinuar"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ToggleButton
        android:id="@+id/img3"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="75dp"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/imgteste_seletor"
        app:layout_constraintBottom_toTopOf="@+id/botaoContinuar"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/titulo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/galindo"
        android:gravity="center"
        android:singleLine="false"
        android:text="Selecione somente as imagens que têm poluição!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/galindo"
        android:gravity="center"
        android:singleLine="false"
        android:text="Selecione somente as imagens que têm poluição!"
        android:textColor="#FF9800"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botaoContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#FF9800"
        android:fontFamily="@font/galindo"
        android:onClick="continua"
        android:text="CONTINUAR"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/botaoAjuda"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="mostraTutorial"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icone_tutorial30px"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Marca a de cima*"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo2" />

</androidx.constraintlayout.widget.ConstraintLayout>