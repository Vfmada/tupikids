<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/design_sem_nome__3_"
    tools:context=".introducao1_fase2">

    <ImageView
        android:id="@+id/tupi"
        android:layout_width="181dp"
        android:layout_height="203dp"
        android:layout_marginTop="-35dp"
        android:rotationY="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balao_fala"
        app:srcCompat="@drawable/tupi" />

    <ImageView
        android:id="@+id/balao_fala"
        android:layout_width="203dp"
        android:layout_height="205dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="230dp"
        android:rotationY="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pinclipart_com_right_clipart_16746" />

    <TextView
        android:id="@+id/fala"
        android:layout_width="175dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/galindo"
        android:gravity="center"
        android:text="Minha amiga Pietra, a tartaruga, estÃ¡ enfrentando um problema com o lixo jogado no mar!"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/balao_fala"
        app:layout_constraintStart_toStartOf="@id/balao_fala"
        app:layout_constraintTop_toTopOf="@+id/balao_fala" />

    <Button
        android:id="@+id/botao_tela"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:onClick="passaDialogo"
        android:visibility="visible"
        app:iconTint="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>